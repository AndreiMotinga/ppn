<%= simple_form_for([:dashboard, post]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :text %>
    <%= f.input :attachment %>
    <%= f.input :private %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
